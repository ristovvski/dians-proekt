@model CulturallyHistoricalObjectsWebApp.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}
<head>
<style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        background: url("../../Content/style/bg.jpg") center/cover fixed no-repeat; /* Add your background image URL here */
        color: #ecf0f1; /* Very light gray (almost white) */
        display: flex;
        align-items: center;
        /* justify-content: center; */
        flex-direction: column;
        height: 100vh;
      }

      /* Dark overlay to dim the background image */
      body::before {
        content: "";
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(
          0deg,
          rgba(0, 0, 36, 0.6) 0%,
          rgba(0, 0, 0, 0.8) 100%
        ); /* Dark overlay */
        z-index: -1;
      }

      header {
        text-align: center;
        padding: 30px;
        color: #f1c40f; /* Matching the button color */
      }

      h2 {
        font-size: 24px;
        margin-bottom: 20px;
      }

      .changePwForm {
        width: 40%;
        margin: 30px auto;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.8);
        background: rgba(0, 0, 0, 0.5); /* Transparent Background */
        text-align: center;
      }

      label {
        display: block;
        text-align: center;
        margin-bottom: 8px;
        font-weight: bold;
      }

      input {
        width: calc(100% - 16px);
        padding: 10px;
        margin-bottom: 20px;
        border: 2px solid #2c3e50; /* Border inside */
        border-radius: 8px; /* More rounded corners */
        box-sizing: border-box;
        background-color: #2c3e50; /* Dark Gray for input background */
        color: #ecf0f1; /* Very light gray text */
        font-size: 16px; /* Increased font size */
      }

      button, #change-password-btn {
        background-color: #f1c40f; /* Lighter Yellow (Accent Color) */
        color: #2c3e50; /* Dark Gray for text on accent color */
        padding: 15px 30px; /* Increased padding */
        border: none;
        border-radius: 8px; /* More rounded corners */
        cursor: pointer;
        font-size: 18px; /* Increased font size */
      }

      button:hover, #change-password-btn:hover {
        background-color: #f39c12; /* Darker shade on hover */
      }

      /* Responsive Styles */
      @@media only screen and (max-width: 800px) {
        form {
          width: 80%; /* Adjusted width for smaller screens */
        }
        input {
          width: calc(100% - 16px);
        }
        .changePwForm{
        width: 90%;
        }
      }
    </style>
  </head>

<main aria-labelledby="title">
    <h1 id="title" style="font-size: 36px">@ViewBag.Title.</h1>

    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form", @class = "changePwForm"}))
    {
        @Html.AntiForgeryToken()
        <h2>Change Password Form</h2>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="row">
            @Html.LabelFor(m => m.OldPassword)
                @Html.PasswordFor(m => m.OldPassword)
        </div>
        <div class="row">
            @Html.LabelFor(m => m.NewPassword)
                @Html.PasswordFor(m => m.NewPassword)
        </div>
        <div class="row">
            @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
        </div>
        <div class="row">
            <div class="p-2">
                <input type="submit" value="Change password" id="change-password-btn" />
            </div>
        </div>
    }
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}