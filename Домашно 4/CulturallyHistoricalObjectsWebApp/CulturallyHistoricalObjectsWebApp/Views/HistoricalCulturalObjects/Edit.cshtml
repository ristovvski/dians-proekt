@using System.Activities.Statements
@using CulturallyHistoricalObjectsWebApp.Models
@using Microsoft.Ajax.Utilities
@model CulturallyHistoricalObjectsWebApp.Models.EditAndCreateDTO

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>HistoricalCulturalObjects</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.historicalCultralObject.id)

    <div class="form-group">
        @Html.LabelFor(model => model.historicalCultralObject.name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.historicalCultralObject.name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.historicalCultralObject.name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.objectTypeId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.objectTypeId, new SelectList(new[] { Model.historicalCultralObject.type }.Concat(Model.objectTypes.Where(r => r.id != Model.historicalCultralObject.type.id)), "id", "type"), new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.historicalCultralObject.lon, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.historicalCultralObject.lon, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.historicalCultralObject.lon, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.historicalCultralObject.lat, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.historicalCultralObject.lat, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.historicalCultralObject.lat, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.region_id, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(
                    model => model.region_id,
                    new SelectList(new[] { Model.historicalCultralObject.region }.Concat(Model.regions.Where(r => r.Id != Model.historicalCultralObject.region.Id)), "id", "name"),
                    new { @class = "form-control" }
                )
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.historicalCultralObject.address, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.historicalCultralObject.address, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.historicalCultralObject.address, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
