@model CulturallyHistoricalObjectsWebApp.Models.AddUserToRoleModel
@{
    ViewBag.Title = "AddUserToRole";
}

<head>
    <style>
          body {
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background: url("../../Content/style/bg.jpg") center/cover fixed no-repeat; /* Add your background image URL here */
            color: #ecf0f1; /* Very light gray (almost white) */
            display: flex;
            align-items: center;
            /* justify-content: center; */
            flex-direction: column;
            height: 100vh;
          }
    
          /* Dark overlay to dim the background image */
          body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(
              0deg,
              rgba(0, 0, 36, 0.6) 0%,
              rgba(0, 0, 0, 0.8) 100%
            ); /* Dark overlay */
            z-index: -1;
          }
    
          h1 {
            text-align: center;
            padding: 30px;
            color: #f1c40f; /* Matching the button color */
          }
    
          .addRoleForm {
            width: 50%;
            margin: 30px auto;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.8);
            background: rgba(0, 0, 0, 0.5); /* Transparent Background */
            text-align: center;
          }
    
          label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
          }
    
          input,
          select {
            width: calc(100% - 16px);
            padding: 10px;
            margin-bottom: 20px;
            border: 2px solid #2c3e50; /* Border inside */
            border-radius: 8px; /* More rounded corners */
            box-sizing: border-box;
            background-color: #2c3e50; /* Dark Gray for input background */
            color: #ecf0f1; /* Very light gray text */
            font-size: 16px; /* Increased font size */
          }
          .select-style {
              border: 2px solid #2c3e50;
              box-sizing: border-box;
              background-color: #2c3e50;
              color: #ecf0f1;
              appearance: none;
              background-image: url('data:image/svg+xml;utf8,<svg fill="%23ecf0f1" height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg"><path d="M7 10l5 5 5-5z"/><path d="M0 0h24v24H0z" fill="none"/></svg>');
              background-repeat: no-repeat;
              background-position: calc(100% - 10px) center;
              cursor: pointer;
          }
          #select-style:hover,
              #select-style:focus {
                  outline: none;
                  border: 2px solid #f1c40f;
              }
    
          button {
            background-color: #f1c40f; /* Lighter Yellow (Accent Color) */
            color: #2c3e50; /* Dark Gray for text on accent color */
            padding: 15px 30px; /* Increased padding */
            border: none;
            border-radius: 8px; /* More rounded corners */
            cursor: pointer;
            font-size: 18px; /* Increased font size */
          }
    
          button:hover {
            background-color: #f39c12; /* Darker shade on hover */
          }
    
          /* Responsive Styles */
          @@media only screen and (max-width: 800px) {
            form {
              width: 80%; /* Adjusted width for smaller screens */
            }
            input,
            select {
              width: calc(100% - 16px);
            }
          }
        </style>
</head>
@if (User.IsInRole("Administrator"))
{
  <h1 style="font-size: 36px">Add User To Role</h1>

    using (Html.BeginForm("AddUserToRole", "Account",FormMethod.Post,new { @class = "addRoleForm" }))
    {
      <div class="row">
            @Html.Label("Email")
            @Html.TextBoxFor(a => a.Email)
            </div>
            <div class="row">
            @Html.DropDownListFor(a => a.SelectedRole, new SelectList(Model.Roles),new { @class = "select-style" })
            </div>
        <button type="submit">Add Role</button>
    }
}
else
{
    <h2>You are not Administrator! How did you get here?</h2>
}