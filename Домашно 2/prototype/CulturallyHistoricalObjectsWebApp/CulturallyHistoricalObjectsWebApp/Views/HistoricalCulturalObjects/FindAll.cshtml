@model IEnumerable<CulturallyHistoricalObjectsWebApp.Models.HistoricalCulturalObjects>

<head>
    <title>Find all</title>
    <style>

        body {
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background: url("../../Content/style/bg.jpg") center/cover fixed no-repeat;
            color: #ecf0f1;
            display: flex;
            align-items: center;
            flex-direction: column;
            height: 100vh;
            width: 100%;
        }

        body::before {
        content: "";
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            0deg,
            rgba(0, 0, 36, 0.6) 0%,
            rgba(0, 0, 0, 0.8) 100%
        );
        z-index: -1;
        }

        table {
        margin-top: 40px;
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
        overflow-x: auto;
        }

        th,
        td {
        padding: 15px;
        text-align: center;
        }

        th {
        background-color: #f1c40f;
        color: #2c3e50;
        }

        td {
        background-color: #34495e;
        color: #ecf0f1;
        }

        tr:nth-child(even) td {
        background-color: #2c3e50;
        }

        .buttons-row {
        display: flex;
        justify-content: space-around;
        margin-top: 10px;
        }

        .yellow-button {
        background-color: #f1c40f;
        color: #2c3e50;
        padding: 10px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
        width: 100%;
        margin-right: 10px;
        }

        .red-button {
        background-color: #e74c3c;
        color: #ecf0f1;
        padding: 10px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
        width: 100%;
        }

        @@media only screen and (max-width: 600px) {
            table {
                width: 90%;
            }
            thead {
                display: none;
            }
            td {
                display: block;
                width: 100%;
            }
        }

    </style>
 </head>
<body>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Longitude</th>
                <th>Latitude</th>
                <th>Type</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.name</td>
                    <td>@obj.lon</td>
                    <td>@obj.lat</td>
                    <td>@(obj.type != null ? obj.type.type : "")</td>
                    <td class="button-column">
                        <div class="buttons-row">
                            @using (Html.BeginForm("Details", "HistoricalCulturalObjects", new { id = obj.id }, FormMethod.Get, new { @class = "form-inline" }))
                            {
                                <button type="submit" class="yellow-button">Favorite</button>
                            }

                            @if (User.IsInRole("Administrator"))
                            {
                                using (Html.BeginForm("Edit", "HistoricalCulturalObjects", new { id = obj.id }, FormMethod.Get, new { @class = "form-inline" }))
                                {
                                    <button type="submit" class="yellow-button">Edit</button>
                                }

                                using (Html.BeginForm("Delete", "HistoricalCulturalObjects", new { id = obj.id }, FormMethod.Get, new { @class = "form-inline" }))
                                {
                                    <button type="submit" class="red-button">Delete</button>
                                }
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
